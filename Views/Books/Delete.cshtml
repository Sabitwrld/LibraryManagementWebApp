@model lLibraryManagementWebApp.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Delete Book</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Delete Book Confirmation</h6>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this book?</h5>
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Category:</strong> @Model.BookCategory.Name</p>
            <p><strong>Publisher:</strong> @Model.Publisher.Name</p>

            <form asp-action="Delete" asp-controller="Books" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
